  "main": "src/server/index.js",
  "scripts": {
    "build": "rimraf dist && webpack --config config/webpack.config.js",
    "dev-all": "cross-env GRAPHITE_HA_SERVER='localhost:3000' npm-run-all --parallel dev-db dev-server",
    "dev-db": "node src/__dev__/server.js",
